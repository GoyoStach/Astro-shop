---
import { ViewTransitions } from 'astro:transitions'
import CustomHead from '../components/CustomHead.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <CustomHead title={title} />
  <body class='font-Poppins bg-expresso-500 min-h-screen max-w-screen'>
    <slot />
    <ViewTransitions />
  </body>
</html>
