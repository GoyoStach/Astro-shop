---
//Rework Todo
import { twMerge } from 'tailwind-merge'

const styleOptions = {
  default: '',
  rounded:
    'font-normal ring-offset-2 focus-visible:ring-4 ring-pine-accent transition-all focus:outline-transparent hover:scale-105 rounded-full border-2 border-pine-text aspect-square w-[70px] h-[70px] grid place-items-center p-2 text-center font-sans leading-tight',
  square:
    'font-normal text-xl ring-offset-2 focus-visible:ring-4  transition-all focus:outline-transparent hover:scale-105 border-2 px-6 py-2 rounded-lg ',
  ghost:
    'font-normal ring-offset-2 focus-visible:ring-4 ring-pine-accent transition-all focus:outline-transparent hover:scale-105 hover:text-blue-500 rounded',
  link: ' font-normal ring-offset-2 focus-visible:ring-4 ring-pine-accent transition-all focus:outline-transparent hover:scale-105 font-sans tracking-wider border-b-2 border-transparent hover:border-pine-text hover:scale-100'
} as const

type Props = {
  href: string
  style?: keyof typeof styleOptions
  classes?: string
}

const { href, style = 'default', classes } = Astro.props

const finalClasses = twMerge(styleOptions[style], classes)
---

<a href={href} class={finalClasses}>
  <slot />
</a>
