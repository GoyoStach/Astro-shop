---
interface Props {
  label?: string
  classList?: string
}

const { label, classList } = Astro.props
---

<div class={`relative flex py-5 items-center ${classList}`}>
  <div class='flex-grow border-t border-gray-400'></div>
  {label ? <span class='flex-shrink mx-4 text-gray-400'>{label}</span> : null}
  <div class='flex-grow border-t border-gray-400'></div>
</div>
